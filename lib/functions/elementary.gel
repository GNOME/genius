SetHelp("log","numeric","Logarithm of any base");
function log(x,b) = (
	if(IsMatrix(x) or IsMatrix(b)) then
		return ApplyOverMatrix2(x,b,log)
	else if(not IsValue(x) or not IsValue(b)) then
		(error("log: arguments not values");bailout);
	ln(x)/ln(b)
);
protect("log")

